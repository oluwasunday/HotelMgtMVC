                                </div>
                                <a asp-controller="Accomodation" asp-action="RoomDetails" asp-route-roomTypeId="@item.Id"><h4 class="sec_h4">@item.Name</h4></a>
                                <h5>@item.Price.ToString("C", CultureInfo.GetCultureInfo("en-NG"))<small>/night</small></h5>
